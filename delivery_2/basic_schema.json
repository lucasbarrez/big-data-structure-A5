{
  "$schema": "http://json-schema.org/draft-00/schema#",
  "title": "Denormalized Database Schema",
  "type": "object",
  "properties": {
    "Product": {
      "type": "object",
      "properties": {
        "IDP": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "brand": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "format": "long_string"
        },
        "image_url": {
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Category"
          }
        },
        "supplier": {
          "$ref": "#/definitions/Supplier"
        }
      },
      "required": ["IDP", "name", "price"]
    },
    "Category": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        }
      },
      "required": ["title"]
    },
    "Supplier": {
      "type": "object",
      "properties": {
        "IDS": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "siret": {
          "type": "string",
          "format": "long_string"
        },
        "headOffice": {
          "type": "string"
        },
        "Revenue": {
          "type": "number"
        }
      },
      "required": ["IDS", "name"]
    },
    "Stock": {
      "type": "object",
      "properties": {
        "quantity": {
          "type": "number"
        },
        "location": {
          "type": "string"
        },
        "product_id": {
          "type": "number"
        },
        "warehouse_id": {
          "type": "number"
        }
      },
      "required": ["quantity", "location", "product_id", "warehouse_id"]
    },
    "Warehouse": {
      "type": "object",
      "properties": {
        "IDW": {
          "type": "number"
        },
        "address": {
          "type": "string"
        },
        "capacity": {
          "type": "number"
        }
      },
      "required": ["IDW", "address", "capacity"]
    },
    "OrderLine": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "quantity": {
          "type": "number",
          "minimum": 1
        },
        "deliveryDate": {
          "type": "string",
          "format": "date-time"
        },
        "comment": {
          "type": "string",
          "format": "long_string"
        },
        "product_id": {
          "type": "number"
        },
        "client_id": {
          "type": "number"
        },
        "grade": {
          "type": "number"
        }
      },
      "required": ["date", "quantity", "product_id", "client_id"]
    },
    "Client": {
      "type": "object",
      "properties": {
        "IDC": {
          "type": "number"
        },
        "ln": {
          "type": "string"
        },
        "fn": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "nationality": {
          "type": "string"
        },
        "birthDate": {
          "type": "string",
          "format": "date-time"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": ["IDC", "ln", "fn", "email"]
    }
  }
}